{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "flake8",
      "type": "shell",
      "command": "flake8 .",
      "problemMatcher": []
    },
    {
      "label": "pep257",
      "type": "shell",
      "command": "pep257 .",
      "problemMatcher": []
    },
    {
      "label": "generate",
      "type": "shell",
      "command": "./generate.py",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "./build.py ${input:build_name} --verbose",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "build_name",
      "type": "pickString",
      "description": "name of the image to build",
      "options": [
        "kinetic",
        "melodic",
        "noetic",
        "dashing",
        "eloquent",
        "foxy",
        "gazebo10",
        "gazebo11",
        "blueprint",
        "citadel",
        "dome",
        "pages",
        "all"
      ],
      "default": "foxy"
    }
  ]
}