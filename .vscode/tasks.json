{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "flake8",
      "type": "shell",
      "command": "flake8 .",
      "problemMatcher": [
        {
          "owner": "flake8",
          "source": "flake8",
          "pattern": [
            {
              "code": 4,
              "column": 3,
              "file": 1,
              "line": 2,
              "message": 5,
              "regexp": "^(.+):(\\d+):(\\d+): (\\w\\d+) (.+)$"
            }
          ]
        }
      ]
    },
    {
      "label": "pep257",
      "type": "shell",
      "command": "pep257 .",
      "problemMatcher": [
        {
          "owner": "pep257",
          "source": "pep257",
          "pattern": [
            {
              "regexp": "^(.*):(\\d*).*:",
              "file": 1,
              "line": 2
            },
            {
              "regexp": "^\\s*(.*): (.*)",
              "code": 1,
              "message": 2
            }
          ]
        }
      ]
    },
    {
      "label": "test",
      "dependsOn": [
        "flake8",
        "pep257"
      ],
    },
    {
      "label": "generate",
      "type": "shell",
      "command": "./generate.py",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "./build.py ${input:build_name}",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "build_name",
      "type": "pickString",
      "description": "name of the image to build",
      "options": [
        "kinetic",
        "melodic",
        "noetic",
        "dashing",
        "eloquent",
        "foxy",
        "gazebo10",
        "gazebo11",
        "blueprint",
        "citadel",
        "dome",
        "edifice",
        "pages",
        "all"
      ],
      "default": "foxy"
    }
  ]
}